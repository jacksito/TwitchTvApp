extends layout
block content

   h1= title
   h2 #{data.status}

   object( 'onclick'='return false','bgcolor'='#000000', 'data'='//www-cdn.jtvnw.net/swflibs/TwitchPlayer.swf', 'height'='378','id'='clip_embed_player_flash','type'='application/x-shockwave-flash','width'='620')
      param('name'='movie','value'='//www-cdn.jtvnw.net/swflibs/TwitchPlayer.swf' )
      param('name'='allowScriptAccess','value'='true' )
      param('name'='allowNetworking','value'='internal')
      param('name'='allowFullScreen','value'='true')
      param('name'='wmode', 'value'='opaque')
      param('name'='flashvars','value'='channel=#{data.name}&start_volume=25&auto_play=true&initial_time=0')

   iframe(width='500', height='350', scrolling='no', frameborder='0', type="text/html", src="http://www.twitch.tv/#{data.name}/chat")
